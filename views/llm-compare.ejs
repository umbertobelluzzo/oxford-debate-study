<!-- views/llm-compare.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>LLM Opinion Study - Compare Paragraphs</title>
  <link rel="stylesheet" href="/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="container">
    <div class="study-card">
      <h1>Paragraph Comparison: <%= index %> of <%= total %></h1>
      
      <form action="/llm-compare" method="POST">
        <div class="proposition-container">
          <p>Consider this political statement:</p>
          <div class="proposition-text">
            <%= proposition %>
          </div>
        </div>
        
        <div class="comparison-container">
          <h3>Paragraph Comparison</h3>
          <p>Imagine you want to explain your opinion to someone. <b>Which of the two paragraphs would you rather use for this purpose?</b></p>
          
          <div class="comparison-columns">
            <div class="comparison-column">
              <h4>Your Original Paragraph</h4>
              <div id="originalPreview" class="preview-box">
                <%= writerParagraph %>
              </div>
            </div>
            
            <div class="comparison-column">
              <h4>Your Edited AI Paragraph</h4>
              <div id="editedPreview" class="preview-box">
                <%= editedParagraph %>
              </div>
            </div>
          </div>
          
          <div class="preference-selection">
            <div class="radio-group">
              <input type="radio" id="preferLeft" name="preference" value="original" required>
              <label for="preferLeft">The paragraph on the left</label>
            </div>
            
            <div class="radio-group">
              <input type="radio" id="preferEqual" name="preference" value="equal">
              <label for="preferEqual">Equal preference</label>
            </div>
            
            <div class="radio-group">
              <input type="radio" id="preferRight" name="preference" value="edited">
              <label for="preferRight">The paragraph on the right</label>
            </div>
          </div>
          
          <div id="reasonSection" class="reason-section" style="display: none;">
            <label><b>Why did you prefer this paragraph over the other?</b> Please tick all reasons that apply and explain any additional reasons under "other".</label>
            
            <div class="checkbox-group">
              <input type="checkbox" id="reasonOpinion" name="preferenceReason" value="opinion">
              <label for="reasonOpinion">It better reflects my opinion.</label>
            </div>
            
            <div class="checkbox-group">
              <input type="checkbox" id="reasonStyle" name="preferenceReason" value="style">
              <label for="reasonStyle">I prefer the writing style.</label>
            </div>
            
            <div class="form-group">
              <label for="reasonOther">Other (please specify):</label>
              <input type="text" id="reasonOther" name="reasonOther">
            </div>
          </div>
        </div>
        <br>
        <div class="progress-container">
          <div class="progress-bar">
            <div class="progress" style="width: <%= 55 + (index * 15) / 3 + 10 %>%"></div>
          </div>
          <div class="progress-text"><%= Math.round(55 + (index * 15) / 3 + 10) %>% complete</div>
        </div>
        
        <div class="button-container">
          <button type="submit" class="button">Continue</button>
        </div>
      </form>
    </div>
  </div>
  
  <script>
    // Show/hide reason section based on preference
    const preferenceInputs = document.querySelectorAll('input[name="preference"]');
    const reasonSection = document.getElementById('reasonSection');
    
    preferenceInputs.forEach(input => {
      input.onchange = () => {
        if (input.value === 'equal') {
          reasonSection.style.display = 'none';
        } else {
          reasonSection.style.display = 'block';
        }
      }
    });
  </script>
</body>
</html>