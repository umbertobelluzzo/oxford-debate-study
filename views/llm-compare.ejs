<!-- views/llm-compare.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>Political Opinion Study - Compare Paragraphs</title>
  <link rel="stylesheet" href="/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <div class="container">
    <div class="study-card">
      <div class="sticky-header">
        <div class="counter-badges">
          <div class="counter-badge-container">
            <span class="counter-badge-label">Statement:</span>
            <div class="counter-badge">
              <%= index %> of <%= total %>
            </div>
          </div>
          <div class="counter-badge-container">
            <span class="counter-badge-label">Step:</span>
            <div class="counter-badge step-badge">1 of 2</div>
          </div>
          <div class="counter-badge-container">
            <span class="counter-badge-label">Screen:</span>
            <div class="counter-badge screen-badge">3 of 4</div>
          </div>
        </div>

        <form id="compareForm" action="/llm-compare" method="POST" onsubmit="return validateForm()">
          <p>Consider this statement:</p>
          <div class="content-container content-container-proposition">
            <div class="content-text content-text-proposition">
              <%= proposition %>
            </div>
          </div>
      </div>

      <div class="scrollable-content">
        <p>Imagine you want to explain your opinion to someone. <b>Which of the two paragraphs below</b> would you
          rather
          use for this purpose?</p>
        <div class="comparison-columns">
          <div class="comparison-column">
            <p>Your <b>original paragraph</b>:</p>
            <div id="originalPreview" class="content-container content-container-writer">
              <%= writerParagraph %>
            </div>
          </div>
          <div class="comparison-column">
            <p>Your <b>edited AI paragraph</b>:</p>
            <div id="editedPreview" class="content-container content-container-ai">
              <%= editedParagraph %>
            </div>
          </div>
        </div>

        <div class="preference-selection">
          <div class="radio-group">
            <input type="radio" id="preferLeft" name="preference" value="original" required>
            <label for="preferLeft">The paragraph on the left</label>
          </div>

          <div class="radio-group">
            <input type="radio" id="preferEqual" name="preference" value="equal">
            <label for="preferEqual">Equal preference</label>
          </div>

          <div class="radio-group">
            <input type="radio" id="preferRight" name="preference" value="edited">
            <label for="preferRight">The paragraph on the right</label>
          </div>
        </div>

        <div id="reasonSection" class="reason-section" style="display: none;">
          <label><b>Why do you prefer this paragraph over the other?</b> Please tick all reasons that apply and
            explain any additional reasons under "other".</label>

          <div class="checkbox-group">
            <input type="checkbox" id="reasonOpinion" name="preferenceReason" value="opinion" class="reason-checkbox">
            <label for="reasonOpinion">It better reflects my opinion.</label>
          </div>

          <div class="checkbox-group">
            <input type="checkbox" id="reasonStyle" name="preferenceReason" value="style" class="reason-checkbox">
            <label for="reasonStyle">I prefer the writing style.</label>
          </div>

          <div class="form-group">
            <label for="reasonOther">Other (please specify):</label>
            <input type="text" id="reasonOther" name="reasonOther">
          </div>

          <div id="reasonError" class="error-message" style="display: none; color: red; margin-top: 5px;">
            Please provide at least one reason for your preference.
          </div>
        </div>
        <br>

        <div class="button-container">
          <button type="submit" class="button">Continue</button>
        </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Show/hide reason section based on preference
    const preferenceInputs = document.querySelectorAll('input[name="preference"]');
    const reasonSection = document.getElementById('reasonSection');
    const reasonCheckboxes = document.querySelectorAll('.reason-checkbox');
    const reasonOther = document.getElementById('reasonOther');
    const reasonError = document.getElementById('reasonError');

    preferenceInputs.forEach(input => {
      input.onchange = () => {
        if (input.value === 'equal') {
          reasonSection.style.display = 'none';
        } else {
          reasonSection.style.display = 'block';
        }
      }
    });

    // Form validation function
    function validateForm() {
      const selectedPreference = document.querySelector('input[name="preference"]:checked');

      // If no preference is selected, the browser's built-in validation will handle it
      if (!selectedPreference) {
        return false;
      }

      // If "equal preference" is selected, no need to validate reasons
      if (selectedPreference.value === 'equal') {
        return true;
      }

      // For other preferences, at least one reason must be provided
      const anyCheckboxChecked = Array.from(reasonCheckboxes).some(checkbox => checkbox.checked);
      const otherReasonProvided = reasonOther.value.trim() !== '';

      if (!anyCheckboxChecked && !otherReasonProvided) {
        reasonError.style.display = 'block';
        return false;
      } else {
        reasonError.style.display = 'none';
        return true;
      }
    }
  </script>
  <script src="/button-disable.js"></script>
</body>

</html>