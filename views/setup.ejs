<!-- views/setup.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>Oxford-Style Debate Research - Debate Setup</title>
  <link rel="stylesheet" href="/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <div class="container" style="width: 800px;">
    <div class="study-card">
      <h1>Debate Setup</h1>
      
      <form action="/setup" method="POST">
        <div class="info-box">
          <h3>Your Debate</h3>
          <p>You will be randomly assigned a topic and position (either Proposition or Opposition). After the assignment, you'll have time to prepare your arguments.</p>
        </div>

        <!-- Word Limit Reminder -->
        <div class="info-box">
            <h3>Format</h3>
            <p>The debate consists of three turns with a <strong>100-150 word limit</strong> per turn:</p>
            <ul>
              <li><strong>Opening Statement:</strong> Introduce your position</li>
              <li><strong>Rebuttal:</strong> Respond to your opponent's arguments</li>
              <li><strong>Closing Statement:</strong> Summarize your position</li>
            </ul>
        </div>

        <!-- Hidden inputs for required values -->
        <input type="hidden" name="opponentModel" value="llama3-1-405b">
        <input type="hidden" name="formatId" value="standard">

        <div class="button-container">
          <button type="submit" class="button">Continue</button>
        </div>
      </form>
    </div>
  </div>

  <style>
    /* Simplified styles for the setup page */
    .info-box {
      background-color: #f8f9fa;
      border-left: 4px solid #4285f4;
      padding: 15px;
      margin: 20px 0;
      border-radius: 4px;
    }

    .info-box h3 {
      margin-top: 0;
      color: #4285f4;
      margin-bottom: 10px;
    }

    .info-box ul {
      margin-top: 10px;
      margin-bottom: 0;
      padding-left: 20px;
    }

    .info-box li {
      margin-bottom: 5px;
    }
    
    .info-box li:last-child {
      margin-bottom: 0;
    }
    
    .info-box p {
      margin-bottom: 10px;
    }
    
    .info-box p:last-child {
      margin-bottom: 0;
    }
  </style>
  <script src="/button-disable.js"></script>
</body>

</html>