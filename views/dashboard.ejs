<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>Oxford-Style Debate Research - Your Progress</title>
  <link rel="stylesheet" href="/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <div class="container" style="width: 800px;">
    <div class="study-card">
      <div class="dashboard-header">
        <h1>Your Debate Progress</h1>
        <div class="participant-badge">
          ID: <%= user.participantId %>
        </div>
      </div>
      
      <div class="progress-overview">
        <div class="progress-stats">
          <div class="progress-stat-item">
            <div class="stat-value"><%= completedDebates.length %> / 5</div>
            <div class="stat-label">Debates Completed</div>
          </div>
          
          <div class="progress-bar-container">
            <div
              class="progress-bar"
              style="width: <%= ((completedDebates.length / 5) * 100) + '%' %>;"
            ></div>
          </div>
          
          <div class="progress-stat-item">
            <div class="stat-value"><%= 5 - completedDebates.length %></div>
            <div class="stat-label">Debates Remaining</div>
          </div>
        </div>
      </div>
      
      <div class="completed-debates">
        <h2>Completed Debates</h2>
        
        <% if (completedDebates.length === 0) { %>
          <div class="no-debates-message">
            <p>You haven't completed any debates yet. Click the button below to start your first debate.</p>
          </div>
        <% } else { %>
          <div class="debates-list">
            <% completedDebates.forEach((debate, index) => { 
              // Find the topic details
              const topic = debateTopics.find(t => t.id === debate.topic) || { 
                title: "Unknown Topic", 
                description: "Topic details not available" 
              };
            %>
              <div class="debate-item">
                <div class="debate-number">#<%= index + 1 %></div>
                <div class="debate-content">
                  <div class="debate-title"><%= topic.title %></div>
                  <div class="debate-details">
                    <div class="debate-position <%= debate.side %>">
                      <%= debate.side === 'proposition' ? 'Proposition (For)' : 'Opposition (Against)' %>
                    </div>
                    <div class="debate-date">
                      Completed: <%= new Date(debate.completedAt).toLocaleDateString('en-GB', { 
                        day: 'numeric', 
                        month: 'short', 
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      }) %>
                    </div>
                  </div>
                  <% if (debate.winnerSideValue !== undefined) { 
                    let resultText = "Draw";
                    let resultClass = "draw";
                    
                    if (debate.winnerSideValue < 45) {
                      resultText = "You won";
                      resultClass = "win";
                    } else if (debate.winnerSideValue > 55) {
                      resultText = "AI won";
                      resultClass = "loss";
                    }
                  %>
                    <div class="debate-result <%= resultClass %>">
                      Result: <%= resultText %>
                    </div>
                  <% } %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
      
      <div class="action-section">
        <% if (completedDebates.length >= 5) { %>
          <div class="completion-message">
            <h3>All Debates Completed!</h3>
            <p>Thank you for completing all 5 debates. Your contribution to this research is greatly appreciated.</p>
          </div>
          <div class="button-container">
            <a href="/completion" class="button">View Completion Certificate</a>
          </div>
        <% } else { %>
          <h3><%= completedDebates.length === 0 ? 'Start Your First Debate' : 'Continue Your Progress' %></h3>
          <p>You have <%= 5 - completedDebates.length %> debates remaining to complete the study.</p>
          
          <div class="button-options">
            <a href="/setup" class="button">
              <%= completedDebates.length === 0 ? 'Start First Debate' : 'Start Next Debate' %>
            </a>
            <a href="/exit" class="button button-secondary">Continue Later</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <style>
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 1px solid #dee2e6;
    }
    
    .participant-badge {
      background-color: #e9ecef;
      padding: 8px 15px;
      border-radius: 20px;
      font-weight: bold;
      font-size: 0.9em;
      color: #495057;
    }
    
    .progress-overview {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 30px;
    }
    
    .progress-stats {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .progress-stat-item {
      text-align: center;
      width: 120px;
    }
    
    .stat-value {
      font-size: 1.8em;
      font-weight: bold;
      color: #4285f4;
      margin-bottom: 5px;
    }
    
    .stat-label {
      font-size: 0.85em;
      color: #6c757d;
    }
    
    .progress-bar-container {
      height: 10px;
      background-color: #e9ecef;
      border-radius: 5px;
      width: 50%;
      overflow: hidden;
    }
    
    .progress-bar {
      height: 100%;
      background-color: #4285f4;
      border-radius: 5px;
      transition: width 0.5s;
    }
    
    .completed-debates {
      margin-bottom: 30px;
    }
    
    .no-debates-message {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
      color: #6c757d;
    }
    
    .debates-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    
    .debate-item {
      display: flex;
      background-color: #f8f9fa;
      border-radius: 8px;
      overflow: hidden;
    }
    
    .debate-number {
      background-color: #4285f4;
      color: white;
      padding: 15px;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 50px;
    }
    
    .debate-content {
      padding: 15px;
      flex-grow: 1;
    }
    
    .debate-title {
      font-weight: bold;
      margin-bottom: 8px;
    }
    
    .debate-details {
      display: flex;
      justify-content: space-between;
      font-size: 0.85em;
      margin-bottom: 8px;
    }
    
    .debate-position {
      padding: 3px 8px;
      border-radius: 4px;
      font-weight: bold;
    }
    
    .debate-position.proposition {
      background-color: #d4edda;
      color: #155724;
    }
    
    .debate-position.opposition {
      background-color: #f8d7da;
      color: #721c24;
    }
    
    .debate-date {
      color: #6c757d;
    }
    
    .debate-result {
      font-size: 0.85em;
      font-weight: bold;
    }
    
    .debate-result.win {
      color: #28a745;
    }
    
    .debate-result.loss {
      color: #dc3545;
    }
    
    .debate-result.draw {
      color: #6c757d;
    }
    
    .action-section {
      background-color: #e6f2ff;
      border-radius: 8px;
      padding: 20px;
    }
    
    .action-section h3 {
      margin-top: 0;
      color: #4285f4;
    }
    
    .button-options {
      display: flex;
      gap: 15px;
      margin-top: 15px;
    }
    
    .completion-message {
      background-color: #d4edda;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
    }
    
    .completion-message h3 {
      margin-top: 0;
      color: #155724;
    }
  </style>
  <script src="/button-disable.js"></script>
</body>

</html>